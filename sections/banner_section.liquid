<div class="new_spilt_test">
  <div class="new_header">
      <div class="container">
        <div class="logo">
            <a href="javascript:void(0)">
                <img src="{{ section.settings.logo | image_url }}">
            </a>
        </div>
        <div class="header_btn_wrapper" style="display: none;">
          <a href="#13320294" class="header_btn">Shop Now!</a>
        </div>
      </div>
  </div>
  <div class="new_banner_section">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <div class="new_banner_content">
            <a href="#customer_reviews_wrapper">
              <div class="review">
                <img src="{{ section.settings.review | image_url }}">
                <p>{{ section.settings.review-text }}</p>
              </div>
            </a>
            <h1>{{ section.settings.title }}</h1>
            <h2>{{ section.settings.subtitle }}</h2>
            <a href="{{ section.settings.btn-url }}" class="new_btn">{{ section.settings.btn }}</a>
          </div>
        </div>
        <div class="col-md-4">
          <div class="new_banner_img">
            <img src="{{ section.settings.product-img | image_url }}">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


